<section>
    <form action="/dashboard/create-post">
        <button type="submit" class="btn" id="create-post">Create a Post</button>
    </form>
</section>

{{#if posts.length}}
<section>
    <h2>Your Posts</h2>
    <ol class="post-list">
        {{#each posts as |post|}}
        <li>
            <article class="post">
                <div class="title">
                    <a href="/post/{{post.id}}" target="_blank">{{post.title}}</a>
                </div>
                <div class="post-content">
                    {{post.post_content}}
                </div>
                <div class="meta">
                    by {{post.user.username}} on {{format_date post.created_at}}        
                    |
                    <a href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a>
                </div>
            </article>
            <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
        </li>
        {{/each}}
    </ol>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>